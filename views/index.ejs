<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Capstone Blog</title>
    <link rel="stylesheet" href="styles\styles.css">
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/4922/4922073.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>

    <header>
        <%- include("partials/header.ejs") %>
    </header>
    
    <main>
        <div class="main-wrapper">
            <div class="showPost postsMain">
                <div id="upperBarShowPost">
                    <div>
                        <h1>Recent posts üéÆ</h1>
                    </div>
                    <div id="searchSort">
                        <div id="sortBy">
                            <button>Sort by ‚ñº</button>
                        </div>
                        <div id="searchBar">
                            <input type="text" placeholder="Search:">
                        </div>
                    </div>
                </div>
                <div class="showPost-container">
                    <% posts.forEach(post => { %>
                        <div class="post">
                            <a href="/about"><img src="<%= post.image %>" alt="Image of a <%= post.gameName %> game"></a>
                            <a href="/about"><h2><span><%= post.title %></span></h2></a>
                            <a href="/about"><button>Show post</button></a>
                        </div>
                    <% }); %>
                </div>
            </div>

            <div class="writePost postsMain">
                <div id="upperBarWritePost">
                    <h1>Create your own post ‚úçÔ∏è</h1>
                </div>
                <div class="postForm-wrapper">
                    <form action="">

                        <div class="form-field">
                            <label for="fname">Type</label>
                            <select id="year" name="year" required>
                                <option value="">Game review</option>
                                <option value="">Post</option>
                            </select>
                        </div>
                        
                        <div class="form-field">
                            <label for="lname">Title <span style="color: hsl(0, 100%, 45%);">*</span></label>
                            <input type="text" id="lname" name="lname" placeholder="Ex. The Witcher 3 Review">
                        </div>

                        <div class="form-field">
                            <label for="content">Game name <span style="color: hsl(0, 100%, 45%);">*</span></label>
                            <input type="text" id="lname" name="lname">
                        </div>

                        <div class="form-field">
                            <label for="content">Date of realse <span style="color: hsl(0, 100%, 45%);">*</span></label>
                            <select id="description" name="year" required>
                                <option value="">Select a year</option>
                            </select>
                        </div>

                        <div class="form-field">
                            <label for="content">Description <span style="color: hsl(0, 100%, 45%);">*</span></label>
                            <textarea id="content" name="content" rows="6" cols="50" required></textarea>
                        </div>

                        <div class="form-field">
                            <label for="content">Image</label>
                        </div>

                        
                        <div class="form-field">
                            <label for="content">Rating</label>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <%- include("partials/footer.ejs") %>   
    </footer>
    
</body>
</html>